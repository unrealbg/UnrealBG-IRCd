{
  "Irc": {
    "ConfigFile": "ircd.conf",
    "IrcPort": 6667,

    "ClientPassword": "",

    "ServerInfo": {
      "Name": "server",
      "Sid": "001",
      "Version": "UnrealBG-IRCd",
      "Description": "IRCd",
      "Network": "local"
    },

    "Listen": {
      "BindIp": "0.0.0.0",
      "ClientPort": 6667,
      "TlsClientPort": 6697,
      "EnableTls": true,
      "TlsCertificatePath": "",
      "TlsCertificatePassword": "",
      "AutoGenerateSelfSignedCertificate": true,
      "AutoGeneratedCertPath": "certs/ircd.pfx",
      "AutoGeneratedCertPassword": "changeit",
      "AutoGeneratedCertDaysValid": 30,
      "AutoGeneratedCertCommonName": "localhost",
      "ServerPort": 6900
    },

    "ConnectionGuard": {
      "Enabled": true,
      "MaxConnectionsPerWindowPerIp": 20,
      "WindowSeconds": 60,
      "MaxActiveConnectionsPerIp": 10,
      "MaxUnregisteredPerIp": 3,
      "RegistrationTimeoutSeconds": 30,
      "RejectMessage": "Connection throttled"
    },

    "RateLimit": {
      "Enabled": true,

      "PrivMsg": {
        "Capacity": 6,
        "RefillTokens": 1,
        "RefillPeriodSeconds": 1
      },
      "Notice": {
        "Capacity": 6,
        "RefillTokens": 1,
        "RefillPeriodSeconds": 1
      },
      "Join": {
        "Capacity": 4,
        "RefillTokens": 1,
        "RefillPeriodSeconds": 3
      },

      "Disconnect": {
        "Enabled": true,
        "MaxViolations": 10,
        "WindowSeconds": 30,
        "QuitMessage": "Excess flood"
      }
    },

    "Ping": {
      "Enabled": true,
      "IdleSecondsBeforePing": 90,
      "DisconnectSecondsAfterPing": 180,
      "QuitMessage": "Ping timeout"
    },

    "Motd": {
      "FilePath": "motd.txt",
      "Lines": []
    }
  }
}
