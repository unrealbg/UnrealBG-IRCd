{
  "Irc": {
    "IrcPort": 6667,

    "ConnectionGuard": {
      "Enabled": true,
      "MaxConnectionsPerWindowPerIp": 20,
      "WindowSeconds": 60,
      "MaxUnregisteredPerIp": 3,
      "RegistrationTimeoutSeconds": 30,
      "RejectMessage": "Connection throttled"
    },

    "RateLimit": {
      "Enabled": true,

      "PrivMsg": {
        "Capacity": 6,
        "RefillTokens": 1,
        "RefillPeriodSeconds": 1
      },
      "Notice": {
        "Capacity": 6,
        "RefillTokens": 1,
        "RefillPeriodSeconds": 1
      },
      "Join": {
        "Capacity": 4,
        "RefillTokens": 1,
        "RefillPeriodSeconds": 3
      },

      "Disconnect": {
        "Enabled": true,
        "MaxViolations": 10,
        "WindowSeconds": 30,
        "QuitMessage": "Excess flood"
      }
    },

    "Ping": {
      "Enabled": true,
      "IdleSecondsBeforePing": 90,
      "DisconnectSecondsAfterPing": 180,
      "QuitMessage": "Ping timeout"
    },

    "Motd": {
      "FilePath": "motd.txt",
      "Lines": []
    }
  }
}
